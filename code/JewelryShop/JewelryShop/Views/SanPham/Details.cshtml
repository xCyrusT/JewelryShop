@model JewelryShop.Model.SanPham
@{
    ViewBag.Title = "Details";
}

<!--start-single-->
<div class="single contact">
    <div class="container">
        <div class="single-main">
            <div class="col-md-9 single-main-left">
                <div class="sngl-top">
                    <div class="col-md-5 single-top-left">
                        <div class="flexslider">
                            <ul class="slides">
                                <li data-thumb="@Model.Anh">
                                    <div class="thumb-image"> <img src="@Model.Anh" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                                </li>
                            </ul>
                        </div>
                        <!-- FlexSlider -->
                        <script src="~/Content/js/imagezoom.js"></script>
                        <script defer src="~/Content/js/jquery.flexslider.js"></script>
                        <link rel="stylesheet" href="~/Content/css/flexslider.css" type="text/css" media="screen" />

                        <script>
						// Can also be used with $(document).ready()
						$(window).load(function() {
						  $('.flexslider').flexslider({
							animation: "slide",
							controlNav: "thumbnails"
						  });
						});
                        </script>
                    </div>
                    <div class="col-md-7 single-top-right">
                        <div class="single-para simpleCart_shelfItem">
                            <h2>@Model.TenSanPham</h2>
                            <br />
                            <h5 class="item_price">@Model.DonGia VND</h5>
                            <p>@Model.MoTa</p>
                            <p><span>Số lượng bán ra: @Model.SoLuongBan</span></p>
                            <a href="#" class="add-cart item_add">MUA HÀNG</a>

                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--end-single-->