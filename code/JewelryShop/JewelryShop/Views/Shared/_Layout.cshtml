<!DOCTYPE html>
<html>
<head>
    <title>Jewelry Shop</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <!--jQuery(necessary for Bootstrap's JavaScript plugins)-->
    <script src="~/Content/js/jquery-1.11.0.min.js"></script>
    <!--Custom-Theme-files-->
    <!--theme-style-->
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//theme-style-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Jewelry Shop" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--start-menu-->
    <script src="~/Content/js/simpleCart.min.js"> </script>
    <link href="~/Content/css/memenu.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="~/Content/js/memenu.js"></script>
    <script>$(document).ready(function(){$(".memenu").memenu();});</script>
    <!--dropdown-->
    <script src="~/Content/js/jquery.easydropdown.js"></script>
    <!--PagedList-->
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <!--top-header-->
    <div class="top-header">
        <div class="container">
            <div class="top-header-main">
                <div class="col-md-6 top-header-left">
                    <div class="drop">
                        <div class="box">
                            <select tabindex="4" class="dropdown drop">
                                <option value="" class="label">VND</option>
                            </select>
                        </div>
                        <div class="box1">
                            <select tabindex="4" class="dropdown">
                                <option value="" class="label">Vietnamese</option>
                            </select>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-md-6 top-header-left">
                    <div class="cart box_1">
                        <a href="#">
                            <div class="total">
                                <span class="simpleCart_total"></span>
                            </div>
                            <img src="~/Content/images/cart-1.png" alt="" />
                        </a>
                        <p><a href="javascript:;" class="simpleCart_empty">Giỏ hàng</a></p>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--top-header-->
    <!--start-logo-->
    <div class="logo">
        <a href="index.html"><h1>Jewelry Shop</h1></a>
    </div>
    <!--start-logo-->
    <!--bottom-header-->
    <div class="header-bottom">
        <div class="container">
            <div class="header">
                <div class="col-md-9 header-left">
                    <div class="top-nav">
                        <ul class="memenu skyblue">
                            <li class="grid"><a href="/Home/Index/">Trang chủ</a></li>
                            <li class="grid">
                                <a href="/Home/About/">Giới thiệu</a>
                            </li>
                            <li class="grid">
                                <a href="/Home/Contact/">Liên hệ</a>
                            </li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="col-md-3 header-right">
                    <div class="search-bar">
                        <form action="/SanPham/Search/" method="post">
                            <input type="text" name="keyword" value="@ViewBag.search" placeholder="Tìm kiếm">
                            <input type="submit" value="">
                        </form>                        
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!--bottom-header-->
    <!--banner-starts-->
    <div class="bnr" id="home">
        <div id="top" class="callbacks_container">
            <ul class="rslides" id="slider4">
                <li>
                    <img src="~/Content/images/bnr-1.jpg" alt="" />
                </li>
                <li>
                    <img src="~/Content/images/bnr-2.jpg" alt="" />
                </li>
                <li>
                    <img src="~/Content/images/bnr-3.jpg" alt="" />
                </li>
            </ul>
        </div>
        <div class="clearfix"> </div>
    </div>
    <!--banner-ends-->
    <!--Slider-Starts-Here-->
    <script src="~/Content/js/responsiveslides.min.js"></script>
    <script>
			    // You can also use "$(window).load(function() {"
			    $(function () {
			      // Slideshow 4
			      $("#slider4").responsiveSlides({
			        auto: true,
			        pager: true,
			        nav: true,
			        speed: 500,
			        namespace: "callbacks",
			        before: function () {
			          $('.events').append("<li>before event fired.</li>");
			        },
			        after: function () {
			          $('.events').append("<li>after event fired.</li>");
			        }
			      });

			    });
    </script>
    <!--End-slider-script-->
    @{Html.RenderAction("_PartialViewDanhMuc", "Home"); }
    <!--product-starts-->
    @RenderBody()
    <!--product-end-->
    <!--information-starts-->
    <div class="information">
        <div class="container">
            <div class="infor-top">
                <div class="col-md-4 infor-left">
                    <h3>Giới thiệu về Jewelry Shop</h3>
                    <ul>
                        <li><a href="#"><span class="fb"></span><h6>Thông tin về Jewelry Shop</h6></a></li>
                        <li><a href="#"><span class="twit"></span><h6>Hệ thống cửa hàng</h6></a></li>
                        <li><a href="#"><span class="google"></span><h6>FAQs</h6></a></li>
                    </ul>
                </div>
                <div class="col-md-4 infor-left">
                    <h3>Hỗ trợ mua hàng</h3>
                    <ul>
                        <li><a href="#"><p>Hướng dẫn mua hàng</p></a></li>
                        <li><a href="#"><p>Hướng dẫn thanh toán</p></a></li>
                        <li><a href="#"><p>Phương thức vận chuyển</p></a></li>
                        <li><a href="#"><p>Chính sách bảo hành - thụ đổi</p></a></li>
                        <li><a href="#"><p>Hướng dẫn đo size trang sức</p></a></li>
                    </ul>
                </div>
                <div class="col-md-4 infor-left">
                    <h3>Dịch vụ</h3>
                    <ul>
                        <li><a href="#"><p>Xuất khẩu</p></a></li>
                        <li><a href="#"><p>Kinh doanh sỉ</p></a></li>
                        <li><a href="#"><p>Kiểm định kim cương</p></a></li>
                        <li><a href="#"><p>Kinh doanh vàng miếng</p></a></li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--information-end-->
    <!--footer-starts-->
    <div class="footer">
        <div class="container">
            <div class="footer-top">
                <div class="col-md-6 footer-left">
                    <form>
                        <input type="text" value="Nhập email của bạn" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Nhập email của bạn'; }">
                        <input type="submit" value="Subscribe">
                    </form>
                </div>
                <div class="col-md-6 footer-right">
                    <p>© 2018 Jewelry Shop. All Rights Reserved | Design by  <a href="https://www.facebook.com/lkthu.dieu" target="_blank">xCyrusT</a> </p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--footer-end-->
</body>
</html>